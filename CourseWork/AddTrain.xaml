<Window x:Class="CourseWork.AddTrain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="AddTrain" Height="300" Width="300">
    <Grid>
        <Label x:Name="label" Content="Train number" HorizontalAlignment="Left" Margin="38,51,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Direction" HorizontalAlignment="Left" Margin="38,86,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="idBox" HorizontalAlignment="Left" Height="23" Margin="147,54,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="directionBox" HorizontalAlignment="Left" Height="23" Margin="147,89,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="addTrainButton" Content="Add Train" HorizontalAlignment="Left" Margin="103,181,0,0" VerticalAlignment="Top" Width="75" Click="addTrainButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="103,222,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>

    </Grid>
</Window>
